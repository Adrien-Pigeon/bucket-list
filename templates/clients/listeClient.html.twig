{% extends "default.html.twig" %}

{% block titre %}Liste-Clients{% endblock %}

{% block contenu6 %}

    <h1>Liste Clients </h1>
    <br>
    <table  class="table">
        <thead>

            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Prenom</th>
                <th scope="col">Age</th>
                <th scope="col">Date de Reservation</th>

            </tr>

        </thead>
        <tbody>
            {% for client in clients %}

        <tr>
            <th scope="row">{{ client.id }}</th>
            <td>{{ client.nom }}</td>
            <td>{{ client.prenom }}</td>
            <td>{{ client.age }}</td>
            <td>{{ client.dateReservation|date("d-m-Y") }}</td>
        </tr>
            {% endfor %}
        </tbody>
    </table>

    </div>

{% endblock %}
