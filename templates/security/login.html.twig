{% extends "default.html.twig" %}

{% block titre %}Connexion{% endblock %}

{% block contenu9 %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Connecte toi wesh !</h1>
    <label for="inputEmail">Pseudo</label>
    <input type="text" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="pseudo" required autofocus>
    <label for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">

    <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Se souvenir de moi
            </label>
        </div>


    <button class="btn btn-lg btn-primary mt-4" type="submit">
       Connexion
    </button>
</form>
{% endblock %}
